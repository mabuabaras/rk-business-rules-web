---
//import transitions effect
import { ViewTransitions } from "astro:transitions";

//import layout
import MainLayout from "../../layouts/MainLayout.astro";

//import list posts React component
import ConfigurationsIndex from "../../components/ConfigurationsIndex.jsx";
---

<MainLayout>
    <ViewTransitions />
    <div class="container mb-5" style="margin-top: 5rem;">
        <div class="row">
            <div class="col-md-12">
                <a
                        href="/configurations/create"
                        class="btn btn-md btn-success rounded shadow-sm border-0 mb-3"
                >ADD NEW CONFIGURATION</a
                >
                <div class="card border-0 rounded shadow-sm">
                    <div class="card-body">
                        <ConfigurationsIndex client:visible />
                    </div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>